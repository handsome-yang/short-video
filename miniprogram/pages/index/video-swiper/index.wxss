.container {
  width: 100%;
  height: 100%;
  position: relative;
}

.video-swiper {
  width: 100%;
  height: 100%
}

.video_item {
  height: 100%;
  width: 100%
}

.video {
  width: 100vw;
  height: 100vh;
}

.img {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 82rpx;
  height: 84rpx;
  margin: auto;
  z-index: 5;
}

.color-view {
  position: fixed;
  left: 0;
  top: 0;
  color: aqua;
}


.right-panel {
  position: absolute;
  right: 15px;
  top: 35vh;
  /* height: 380px; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  color: white;
}

.right-panel-cell {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 15px;
}

.right-panel-icon {
  font-size: 30px;
}

.right-panel-text {
  font-size: 12px;
}

.user-photo {
  width: 45px;
  height: 45px;
  border: 2px solid #fff;
  border-radius: 50%;
}

.follow-view {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: red;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 50%);
}

.like-fill-animate {
  animation-direction: normal;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in-out;
  animation-name: like-fill;
}

.like-o-animate {
  animation-direction: normal;
  animation-duration: 0.3s;
  animation-fill-mode: forwards;
  animation-name: like-o;
}


.star-fill-animate {
  animation-direction: normal;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
  animation-timing-function: ease-in-out;
  animation-name: star-fill;
}

.star-o-animate {
  animation-direction: normal;
  animation-duration: 0.3s;
  animation-fill-mode: forwards;
  animation-name: star-o;
}

@keyframes like-o {
  from {
    font-size: 30px;
    /* color: rgb(208, 90, 110, 1.0); */
    color: rgb(208, 90, 110, 1.0);
  }

  to {
    font-size: 30px;
    color: rgb(255, 255, 255, 1.0);
  }
}

@keyframes like-fill {
  0% {
    font-size: 30px;
    color: rgb(255, 255, 255, 0);
  }

  25% {
    font-size: 18px;
    color: rgb(208, 90, 110, 0.5);
  }

  50% {
    font-size: 3px;
    color: rgb(208, 90, 110, 0.7);
  }

  75% {
    font-size: 45px;
    color: rgb(208, 90, 110, 0.7);
  }

  100% {
    font-size: 30px;
    color: rgb(208, 90, 110, 1.0);
  }
}

@keyframes star-o {
  from {
    font-size: 30px;
    color: rgb(246, 197, 85, 1.0);
  }

  to {
    font-size: 30px;
    color: rgb(255, 255, 255, 1.0);
  }
}

@keyframes star-fill {
  0% {
    font-size: 30px;
    color: rgb(255, 255, 255, 0);
  }

  25% {
    font-size: 18px;
    color: rgb(246, 197, 85, 0.5);
  }

  50% {
    font-size: 3px;
    color: rgb(246, 197, 85, 0.7);
  }

  75% {
    font-size: 45px;
    color: rgb(246, 197, 85, 0.7);
  }

  100% {
    font-size: 30px;
    color: rgb(246, 197, 85, 1.0);
  }
}

.scale-animate {
  animation-name: scale-icon;
  animation-direction: normal;
  animation-timing-function: ease-in-out;
  animation-duration: 0.3s;
  animation-fill-mode: forwards;
}

@keyframes scale-icon {
  0% {
    transform: scale(1.0);
  }

  50% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1.0);
  }
}

.share-btn {
  background-color: transparent !important;
  border: 0 !important;
  height: inherit !important;
  padding: 0 !important;
}

.share-btn::before {
  background-color: transparent !important;
}

.hert-class {
  color: #D05A6E;
  animation-name: hert-animate;
  animation-direction: normal;
  animation-timing-function: ease;
  animation-duration: 2s;
  animation-fill-mode: forwards;
}

@keyframes hert-animate {
  0% {
    color: rgb(208, 90, 110, 0.1);
    transform: scale(2.0) translateY(-40px);
  }

  50% {
    color: rgb(208, 90, 110, 1.0);
    transform: scale(1.0) translateY(0);
  }


  100% {
    color: rgb(208, 90, 110, 0);
    transform: scale(2.0) translateY(-100px);
  }
}

.attention-animate {
  animation-name: attention;
  animation-direction: normal;
  animation-timing-function: ease;
  animation-duration: 1s;
  animation-fill-mode: forwards;
}

@keyframes attention {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(0.5);
  }

  100% {
    transform: scale(1.0);
  }
}